<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/capture_preview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp">

    <ImageView
        android:id="@+id/capture_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/capture_picture_bg"
        android:scaleType="fitXY"
        android:contentDescription="@string/capture_view"/>

    <View
        android:id="@+id/view_stub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/capture_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete_white_24dp"
        android:background="@drawable/capture_delete_done_selector"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/view_stub"
        android:layout_toStartOf="@id/view_stub"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"/>

    <ImageButton
        android:id="@+id/capture_done"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_done_white_24dp"
        android:background="@drawable/capture_delete_done_selector"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/view_stub"
        android:layout_toEndOf="@id/view_stub"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>